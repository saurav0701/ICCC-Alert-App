<?xml version="1.0" encoding="utf-8"?>
<!-- ✅ FIXED: Removed duplicate AppBarLayout and Toolbar -->
<!-- BaseDrawerActivity already provides the toolbar -->

<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FA">

    <!-- ❌ REMOVED: AppBarLayout with Toolbar (duplicate) -->

    <!-- Loading View -->
    <ProgressBar
        android:id="@+id/profile_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="visible" />

    <!-- Content View -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/profile_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Profile Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Profile Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="20dp">

                        <!-- Avatar -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="72dp"
                            android:layout_height="72dp"
                            app:cardCornerRadius="36dp"
                            app:cardElevation="4dp">

                            <ImageView
                                android:id="@+id/profile_avatar"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_default_avatar"
                                android:scaleType="centerCrop"
                                android:contentDescription="Profile Picture" />

                        </androidx.cardview.widget.CardView>

                        <!-- Name and Phone -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">

                            <TextView
                                android:id="@+id/profile_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="User Name"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textColor="#1A1A1A"
                                android:fontFamily="sans-serif-medium" />

                            <TextView
                                android:id="@+id/profile_phone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="+91 XXXXXXXXXX"
                                android:textSize="14sp"
                                android:textColor="#757575"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E0E0E0"
                        android:layout_marginBottom="16dp" />

                    <!-- Info Items -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Designation -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginBottom="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Designation"
                                android:textSize="12sp"
                                android:textColor="#9E9E9E"
                                android:fontFamily="sans-serif-medium" />

                            <TextView
                                android:id="@+id/profile_designation"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Engineer"
                                android:textSize="16sp"
                                android:textColor="#424242"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                        <!-- Area -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginBottom="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Area"
                                android:textSize="12sp"
                                android:textColor="#9E9E9E"
                                android:fontFamily="sans-serif-medium" />

                            <TextView
                                android:id="@+id/profile_area"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sijua"
                                android:textSize="16sp"
                                android:textColor="#424242"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                        <!-- Working For -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Working For"
                                android:textSize="12sp"
                                android:textColor="#9E9E9E"
                                android:fontFamily="sans-serif-medium" />

                            <TextView
                                android:id="@+id/profile_working_for"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="BCCL"
                                android:textSize="16sp"
                                android:textColor="#424242"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Subscribed Channels Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="20dp"
                        android:paddingBottom="12dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_channels"
                            android:tint="?attr/colorPrimary"
                            android:contentDescription="Channels" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Subscribed Channels"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#1A1A1A"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginStart="12dp" />

                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E0E0E0" />

                    <!-- Channels Container -->
                    <LinearLayout
                        android:id="@+id/subscribed_channels_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Logout Button -->
            <Button
                android:id="@+id/logout_button"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:text="Logout"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:background="@drawable/logout_button_background"
                android:textAllCaps="false"
                android:fontFamily="sans-serif-medium"
                android:drawableStart="@drawable/ic_logout"
                android:drawableTint="#FFFFFF"
                android:drawablePadding="8dp"
                android:gravity="center" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>