<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:background="@drawable/nav_header_gradient"
    android:gravity="bottom"
    android:orientation="vertical"
    android:padding="20dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <!-- Profile Picture -->
    <androidx.cardview.widget.CardView
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginBottom="12dp"
        app:cardCornerRadius="36dp"
        app:cardElevation="4dp">

        <ImageView
            android:id="@+id/user_avatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_default_avatar"
            android:scaleType="centerCrop"
            android:contentDescription="User Avatar" />

    </androidx.cardview.widget.CardView>

    <!-- User Name -->
    <TextView
        android:id="@+id/user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ICCC User"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:shadowColor="#40000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:ellipsize="end"
        android:maxLines="1" />

    <!-- Phone Number -->
    <TextView
        android:id="@+id/user_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+91 XXXXXXXXXX"
        android:textSize="15sp"
        android:textColor="#E0FFFFFF"
        android:layout_marginTop="4dp" />

    <!-- Additional Info (Designation & Area) -->
    <TextView
        android:id="@+id/user_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Engineer • Sijua"
        android:textSize="13sp"
        android:textColor="#C0FFFFFF"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:maxLines="1" />

    <!-- View Profile Button -->
    <TextView
        android:id="@+id/view_profile_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Profile →"
        android:textSize="13sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_marginTop="12dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:background="@drawable/view_profile_button_bg"
        android:clickable="true"
        android:focusable="true" />

</LinearLayout>