<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="6dp"
    android:paddingBottom="6dp">

    <!-- Saved GPS Event Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Map Preview Container -->
            <FrameLayout
                android:id="@+id/saved_map_preview_frame"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="#F5F7FA">

                <!-- Map Preview -->
                <org.osmdroid.views.MapView
                    android:id="@+id/saved_map_preview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="false"
                    android:focusable="false" />

                <!-- Loading Overlay -->
                <FrameLayout
                    android:id="@+id/saved_map_loading_overlay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#80000000"
                    android:clickable="false"
                    android:visibility="gone">

                    <ProgressBar
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:indeterminateTint="#FFFFFF" />
                </FrameLayout>

                <!-- Event Badge -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|top"
                    android:layout_margin="16dp"
                    android:background="@drawable/badge_background"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:elevation="4dp">

                    <View
                        android:id="@+id/saved_gps_badge"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:background="@drawable/circle_background"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/saved_gps_icon_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="OR"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:fontFamily="sans-serif-medium" />
                </LinearLayout>

            </FrameLayout>

            <!-- Event Info Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="18dp">

                <TextView
                    android:id="@+id/saved_gps_event_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Off-Route Alert"
                    android:textSize="18sp"
                    android:textStyle="normal"
                    android:textColor="#1A1A1A"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="0.01"
                    android:maxLines="2"
                    android:ellipsize="end" />

                <!-- Vehicle Information -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="12dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:src="@drawable/ic_vehicle"
                            android:tint="#757575"
                            android:contentDescription="Vehicle" />

                        <TextView
                            android:id="@+id/saved_vehicle_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="JH10CK0157"
                            android:textSize="14sp"
                            android:textColor="#1A1A1A"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginStart="6dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="6dp">

                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:src="@drawable/ic_transporter"
                            android:tint="#757575"
                            android:contentDescription="Transporter" />

                        <TextView
                            android:id="@+id/saved_vehicle_transporter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ABC Logistics"
                            android:textSize="14sp"
                            android:textColor="#757575"
                            android:fontFamily="sans-serif"
                            android:layout_marginStart="6dp" />

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#F0F0F0"
                    android:layout_marginTop="14dp"
                    android:layout_marginBottom="14dp" />

                <!-- Timestamp -->
                <TextView
                    android:id="@+id/saved_gps_timestamp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nov 13, 2025 17:04:32"
                    android:textSize="13sp"
                    android:textColor="#616161"
                    android:fontFamily="sans-serif" />

                <!-- Priority Badge -->
                <TextView
                    android:id="@+id/saved_gps_priority_badge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="High"
                    android:textSize="12sp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="sans-serif-medium"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:background="@drawable/priority_badge_background"
                    android:layout_marginTop="12dp" />

                <!-- Comment Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#F8F9FA"
                    android:padding="12dp"
                    android:layout_marginTop="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Note:"
                        android:textSize="11sp"
                        android:textColor="#757575"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/saved_gps_comment_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="This is a saved comment for the GPS event."
                        android:textSize="13sp"
                        android:textColor="#424242"
                        android:fontFamily="sans-serif"
                        android:lineSpacingExtra="2dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="18dp"
                android:paddingEnd="18dp"
                android:paddingBottom="18dp"
                android:gravity="center_vertical">

                <Button
                    android:id="@+id/saved_view_on_map_button"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="View on Map"
                    android:textSize="15sp"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/action_button_bg"
                    android:textAllCaps="false"
                    android:fontFamily="sans-serif-medium"
                    android:drawableStart="@drawable/ic_map"
                    android:drawableTint="#FFFFFF"
                    android:drawablePadding="8dp"
                    android:gravity="center"
                    android:layout_marginEnd="8dp" />

                <ImageView
                    android:id="@+id/saved_gps_delete_button"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_delete"
                    android:tint="#E57373"
                    android:padding="12dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Delete" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>