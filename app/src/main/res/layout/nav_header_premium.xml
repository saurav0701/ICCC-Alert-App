<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/nav_header_gradient_background"
    android:padding="24dp"
    android:paddingTop="40dp"
    android:paddingBottom="16dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <!-- Profile Avatar with Badge -->
    <androidx.cardview.widget.CardView
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:cardCornerRadius="40dp"
        app:cardElevation="6dp"
        android:layout_marginBottom="16dp">

        <ImageView
            android:id="@+id/profile_avatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_default_avatar"
            android:scaleType="centerCrop"
            android:contentDescription="Profile Picture" />

        <!-- Online Status Indicator -->
        <View
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="bottom|end"
            android:layout_margin="4dp"
            android:background="@drawable/status_indicator_online" />

    </androidx.cardview.widget.CardView>

    <!-- User Name -->
    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ICCC User"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:fontFamily="sans-serif-medium"
        android:layout_marginBottom="4dp"
        android:elevation="2dp"
        android:shadowColor="#40000000"
        android:shadowDx="0"
        android:shadowDy="1"
        android:shadowRadius="3" />

    <!-- User Phone -->
    <TextView
        android:id="@+id/user_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+91 XXXXXXXXXX"
        android:textSize="14sp"
        android:textColor="#E3F2FD"
        android:fontFamily="sans-serif"
        android:layout_marginBottom="8dp" />

    <!-- User Info with Icon -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@drawable/ic_location"
            android:tint="#B3E5FC"
            android:layout_marginEnd="6dp"
            android:contentDescription="Location" />

        <TextView
            android:id="@+id/user_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Engineer â€¢ Sijua"
            android:textSize="13sp"
            android:textColor="#B3E5FC"
            android:fontFamily="sans-serif" />

    </LinearLayout>

    <!-- View Profile Button with Modern Design -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/view_profile_button"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:text="View Profile"
        android:textSize="13sp"
        android:textColor="?attr/colorPrimary"
        android:fontFamily="sans-serif-medium"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:icon="@drawable/ic_arrow_forward"
        app:iconGravity="end"
        app:iconSize="16dp"
        app:iconTint="?attr/colorPrimary"
        app:cornerRadius="18dp"
        app:backgroundTint="#FFFFFF"
        app:strokeWidth="0dp"
        android:elevation="3dp"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

</LinearLayout>