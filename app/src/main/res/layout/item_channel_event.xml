<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="6dp"
    android:paddingBottom="6dp">

    <!-- Premium Card Container -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Image Container -->
            <FrameLayout
                android:id="@+id/image_frame"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:background="#F5F7FA">

                <ImageView
                    android:id="@+id/event_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:visibility="gone"
                    android:contentDescription="Event snapshot" />

                <LinearLayout
                    android:id="@+id/loading_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:visibility="visible">

                    <ProgressBar
                        android:id="@+id/image_progress"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:indeterminate="true"
                        android:indeterminateTint="#2196F3" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loading..."
                        android:textSize="13sp"
                        android:textColor="#9E9E9E"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginTop="12dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/error_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:src="@drawable/ic_image_error"
                        android:tint="#BDBDBD"
                        android:contentDescription="Failed to load" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Image unavailable"
                        android:textSize="13sp"
                        android:textColor="#9E9E9E"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginTop="12dp" />

                </LinearLayout>

                <View
                    android:id="@+id/image_overlay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/image_shadow_overlay"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|top"
                    android:layout_margin="16dp"
                    android:background="@drawable/badge_background"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:elevation="4dp">

                    <View
                        android:id="@+id/event_badge"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:background="@drawable/circle_background"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/event_icon_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="VD"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:fontFamily="sans-serif-medium" />

                </LinearLayout>

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="18dp">

                <TextView
                    android:id="@+id/event_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vehicle Detection"
                    android:textSize="18sp"
                    android:textStyle="normal"
                    android:textColor="#1A1A1A"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="0.01"
                    android:maxLines="2"
                    android:ellipsize="end" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="8dp">

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_location"
                        android:tint="#757575"
                        android:contentDescription="Location" />

                    <TextView
                        android:id="@+id/event_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gate 1"
                        android:textSize="14sp"
                        android:textColor="#757575"
                        android:fontFamily="sans-serif"
                        android:layout_marginStart="6dp"
                        android:maxLines="1"
                        android:ellipsize="end" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#F0F0F0"
                    android:layout_marginTop="14dp"
                    android:layout_marginBottom="14dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/event_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Nov 12, 2025"
                        android:textSize="13sp"
                        android:textColor="#616161"
                        android:fontFamily="sans-serif" />

                    <TextView
                        android:id="@+id/event_timestamp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="14:32"
                        android:textSize="13sp"
                        android:textColor="#616161"
                        android:fontFamily="sans-serif-medium" />

                </LinearLayout>

            </LinearLayout>

            <!-- Action Buttons Container (Download, Share, PDF) -->
            <LinearLayout
                android:id="@+id/action_buttons_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:background="#FAFBFC"
                android:padding="18dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quick Actions"
                    android:textSize="15sp"
                    android:textColor="#424242"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="14dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <Button
                        android:id="@+id/download_image_button"
                        android:layout_width="0dp"
                        android:layout_height="46dp"
                        android:layout_weight="1"
                        android:text="Download"
                        android:textSize="13sp"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/action_button_bg"
                        android:textAllCaps="false"
                        android:fontFamily="sans-serif-medium"
                        android:drawableTop="@drawable/ic_download"
                        android:drawableTint="#FFFFFF"
                        android:drawablePadding="4dp"
                        android:layout_marginEnd="6dp" />

                    <Button
                        android:id="@+id/share_image_button"
                        android:layout_width="0dp"
                        android:layout_height="46dp"
                        android:layout_weight="1"
                        android:text="Share"
                        android:textSize="13sp"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/action_button_bg"
                        android:textAllCaps="false"
                        android:fontFamily="sans-serif-medium"
                        android:drawableTop="@drawable/ic_share"
                        android:drawableTint="#FFFFFF"
                        android:drawablePadding="4dp"
                        android:layout_marginStart="6dp" />

                </LinearLayout>

                <Button
                    android:id="@+id/download_event_pdf_button"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:layout_marginTop="10dp"
                    android:text="Download as PDF"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/pdf_button_background"
                    android:textAllCaps="false"
                    android:fontFamily="sans-serif-medium"
                    android:drawableStart="@drawable/ic_pdf"
                    android:drawableTint="#FFFFFF"
                    android:drawablePadding="8dp"
                    android:gravity="center" />

            </LinearLayout>

            <!-- Save Section -->
            <LinearLayout
                android:id="@+id/save_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:background="#FAFBFC"
                android:padding="18dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Save Event"
                    android:textSize="15sp"
                    android:textColor="#424242"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="14dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Priority Level"
                    android:textSize="12sp"
                    android:textColor="#757575"
                    android:fontFamily="sans-serif"
                    android:layout_marginBottom="6dp" />

                <Spinner
                    android:id="@+id/priority_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/spinner_background"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Note"
                    android:textSize="12sp"
                    android:textColor="#757575"
                    android:fontFamily="sans-serif"
                    android:layout_marginBottom="6dp" />

                <EditText
                    android:id="@+id/comment_input"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:background="@drawable/edit_text_background"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"
                    android:hint="Add your note here..."
                    android:maxLength="100"
                    android:textSize="14sp"
                    android:textColor="#1A1A1A"
                    android:inputType="text"
                    android:imeOptions="actionDone"
                    android:layout_marginBottom="16dp" />

                <Button
                    android:id="@+id/save_button"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Save Event"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    android:background="@drawable/save_button_background"
                    android:textAllCaps="false"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="0.02" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>