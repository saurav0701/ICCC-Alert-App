<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:paddingStart="12dp"
    android:paddingEnd="16dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <!-- Channel Icon (Left) -->
    <FrameLayout
        android:id="@+id/channel_icon_container"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="12dp">

        <View
            android:id="@+id/channel_icon_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/circle_background" />

        <TextView
            android:id="@+id/channel_icon_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="VD"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF" />

    </FrameLayout>

    <!-- Channel Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/channel_icon_container"
        android:orientation="vertical"
        android:layout_centerVertical="true">

        <!-- Top Row: Title, Pin Icon, NEW/LIVE Badge and Timestamp -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/channel_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@id/indicators_container"
                android:text="Sijua - Vehicle Detection"
                android:textSize="16sp"
                android:textStyle="normal"
                android:textColor="#000000"
                android:maxLines="1"
                android:ellipsize="end"
                android:fontFamily="sans-serif-medium" />

            <!-- ✅ NEW: Indicators Container (LIVE, NEW, Pin) -->
            <LinearLayout
                android:id="@+id/indicators_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/channel_timestamp"
                android:layout_centerVertical="true"
                android:orientation="horizontal"
                android:layout_marginEnd="6dp">

                <!-- ✅ LIVE Indicator (Red, Pulsing) -->
                <TextView
                    android:id="@+id/live_indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LIVE"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/live_badge_background"
                    android:paddingStart="6dp"
                    android:paddingEnd="6dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:visibility="gone"
                    android:layout_marginEnd="4dp" />

                <!-- ✅ NEW Indicator (Orange) -->
                <TextView
                    android:id="@+id/new_indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NEW"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/new_badge_background"
                    android:paddingStart="6dp"
                    android:paddingEnd="6dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:visibility="gone"
                    android:layout_marginEnd="4dp" />

                <!-- Pin Icon -->
                <ImageView
                    android:id="@+id/pin_icon"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_pin"
                    android:tint="#FF9800"
                    android:visibility="gone"
                    android:layout_marginEnd="4dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/channel_timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="14:32"
                android:textSize="13sp"
                android:textColor="#808080"
                android:layout_marginStart="8dp" />

        </RelativeLayout>

        <!-- Bottom Row: Subtitle and Unread Badge -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/channel_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@id/unread_badge"
                android:text="Gate 1"
                android:textSize="15sp"
                android:textColor="#8A8A8A"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_centerVertical="true" />

            <!-- ✅ ENHANCED: Unread Badge with Dynamic Colors -->
            <TextView
                android:id="@+id/unread_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/badge_background"
                android:text="5"
                android:textSize="12sp"
                android:textStyle="normal"
                android:textColor="#FFFFFF"
                android:paddingStart="7dp"
                android:paddingEnd="7dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:minWidth="22dp"
                android:gravity="center"
                android:fontFamily="sans-serif-medium"
                android:elevation="2dp"
                android:visibility="gone" />

        </RelativeLayout>

    </LinearLayout>

    <!-- Separator Line -->
    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="78dp"
        android:background="#E5E5E5" />

</RelativeLayout>