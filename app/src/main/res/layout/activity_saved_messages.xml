<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F6F7">

    <!-- Filter Section -->
    <LinearLayout
        android:id="@+id/filter_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:elevation="4dp"
        android:padding="16dp">

        <!-- Filter Button -->
        <Button
            android:id="@+id/filter_button"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:text="Filter by Priority"
            android:textSize="14sp"
            android:textColor="#424242"
            android:background="@drawable/action_button_secondary_bg"
            android:textAllCaps="false"
            android:fontFamily="sans-serif-medium"
            android:drawableStart="@drawable/ic_filter"
            android:drawableTint="#424242"
            android:drawablePadding="8dp"
            android:gravity="center" />

        <!-- Filter Status Text -->
        <TextView
            android:id="@+id/filter_status_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Filtered by: High Priority"
            android:textSize="12sp"
            android:textColor="#2196F3"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            android:drawableStart="@drawable/ic_check_circle"
            android:drawableTint="#2196F3"
            android:drawablePadding="6dp" />

        <!-- Filter Container (Expandable) -->
        <LinearLayout
            android:id="@+id/filter_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:background="#F8F9FA"
            android:padding="16dp"
            android:layout_marginTop="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Priority"
                android:textSize="13sp"
                android:textColor="#757575"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="8dp" />

            <Spinner
                android:id="@+id/priority_filter_spinner"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/spinner_background"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/clear_filter_button"
                    android:layout_width="0dp"
                    android:layout_height="42dp"
                    android:layout_weight="1"
                    android:text="Clear"
                    android:textColor="#757575"
                    android:textSize="13sp"
                    android:background="@drawable/action_button_secondary_bg"
                    android:textAllCaps="false"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/apply_filter_button"
                    android:layout_width="0dp"
                    android:layout_height="42dp"
                    android:layout_weight="1"
                    android:text="Apply Filter"
                    android:textColor="#FFFFFF"
                    android:textSize="13sp"
                    android:background="@drawable/save_button_background"
                    android:textAllCaps="false"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/saved_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/filter_section"
        android:clipToPadding="false"
        android:padding="8dp" />

    <LinearLayout
        android:id="@+id/empty_saved_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/filter_section"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_bookmark_large"
            android:alpha="0.3"
            android:contentDescription="No saved messages" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Saved Messages"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#666666"
            android:layout_marginTop="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save important alerts here for quick access"
            android:textSize="14sp"
            android:textColor="#999999"
            android:textAlignment="center"
            android:layout_marginTop="8dp" />

    </LinearLayout>

</RelativeLayout>