<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <!-- ✅ ENHANCED: Material Design 3 Card with better elevation -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="#FFFFFF"
        app:strokeWidth="0dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Image Container with Enhanced Design -->
            <FrameLayout
                android:id="@+id/image_frame"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:background="#F5F7FA">

                <ImageView
                    android:id="@+id/event_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:visibility="gone"
                    android:contentDescription="Event snapshot" />

                <!-- ✅ ENHANCED: Better loading state -->
                <LinearLayout
                    android:id="@+id/loading_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:visibility="visible"
                    android:background="@drawable/image_loading_gradient">

                    <ProgressBar
                        android:id="@+id/image_progress"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:indeterminate="true"
                        android:indeterminateTint="?attr/colorPrimary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loading image..."
                        android:textSize="13sp"
                        android:textColor="#757575"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginTop="12dp" />

                </LinearLayout>

                <!-- Enhanced error state -->
                <LinearLayout
                    android:id="@+id/error_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:visibility="gone"
                    android:background="#FAFAFA">

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/ic_image_error"
                        android:tint="#BDBDBD"
                        android:contentDescription="Failed to load" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Image unavailable"
                        android:textSize="13sp"
                        android:textColor="#9E9E9E"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginTop="12dp" />

                </LinearLayout>

                <!-- ✅ ENHANCED: Gradient overlay for better text contrast -->
                <View
                    android:id="@+id/image_overlay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/image_gradient_overlay"
                    android:visibility="gone" />

                <!-- ✅ ENHANCED: Modern badge design -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|top"
                    android:layout_margin="16dp"
                    android:background="@drawable/modern_badge_bg"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:elevation="6dp">

                    <View
                        android:id="@+id/event_badge"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:background="@drawable/circle_background"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/event_icon_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="VD"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:fontFamily="sans-serif-medium" />

                </LinearLayout>

                <!-- ✅ NEW: Quick action overlay buttons -->
                <LinearLayout
                    android:id="@+id/quick_actions_overlay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|bottom"
                    android:layout_margin="16dp"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:alpha="0">

                    <ImageButton
                        android:id="@+id/quick_save_button"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:src="@drawable/ic_bookmark"
                        android:background="@drawable/quick_action_button_bg"
                        android:tint="#FFFFFF"
                        android:layout_marginEnd="8dp"
                        android:elevation="4dp"
                        android:contentDescription="Quick save" />

                    <ImageButton
                        android:id="@+id/quick_share_button"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:src="@drawable/ic_share"
                        android:background="@drawable/quick_action_button_bg"
                        android:tint="#FFFFFF"
                        android:elevation="4dp"
                        android:contentDescription="Quick share" />

                </LinearLayout>

            </FrameLayout>

            <!-- ✅ ENHANCED: Better content spacing and hierarchy -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- ✅ ENHANCED: Title with better typography -->
                <TextView
                    android:id="@+id/event_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vehicle Detection"
                    android:textSize="19sp"
                    android:textStyle="normal"
                    android:textColor="#1A1A1A"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="0.005"
                    android:lineSpacingExtra="2dp"
                    android:maxLines="2"
                    android:ellipsize="end" />

                <!-- ✅ ENHANCED: Better location display -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_location"
                        android:tint="#616161"
                        android:contentDescription="Location" />

                    <TextView
                        android:id="@+id/event_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gate 1"
                        android:textSize="15sp"
                        android:textColor="#616161"
                        android:fontFamily="sans-serif"
                        android:layout_marginStart="6dp"
                        android:maxLines="1"
                        android:ellipsize="end" />

                </LinearLayout>

                <!-- ✅ ENHANCED: Subtle divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/subtle_divider_gradient"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp" />

                <!-- ✅ ENHANCED: Better time display -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_calendar"
                        android:tint="#757575"
                        android:contentDescription="Date" />

                    <TextView
                        android:id="@+id/event_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Nov 12, 2025"
                        android:textSize="13sp"
                        android:textColor="#757575"
                        android:fontFamily="sans-serif"
                        android:layout_marginStart="6dp" />

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_time"
                        android:tint="#757575"
                        android:layout_marginStart="16dp"
                        android:contentDescription="Time" />

                    <TextView
                        android:id="@+id/event_timestamp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="14:32"
                        android:textSize="13sp"
                        android:textColor="#757575"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginStart="6dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Quick Action Buttons Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#FAFBFC"
                android:paddingStart="18dp"
                android:paddingEnd="18dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:gravity="center">

                <Button
                    android:id="@+id/save_event_button"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:text="Save"
                    android:textSize="13sp"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/save_button_background"
                    android:textAllCaps="false"
                    android:fontFamily="sans-serif-medium"
                    android:drawableStart="@drawable/ic_bookmark"
                    android:drawableTint="#FFFFFF"
                    android:drawablePadding="6dp"
                    android:layout_marginEnd="6dp" />

                <Button
                    android:id="@+id/more_actions_button"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:text="More"
                    android:textSize="13sp"
                    android:textColor="#424242"
                    android:background="@drawable/action_button_secondary_bg"
                    android:textAllCaps="false"
                    android:fontFamily="sans-serif-medium"
                    android:drawableStart="@drawable/ic_more"
                    android:drawableTint="#424242"
                    android:drawablePadding="6dp"
                    android:layout_marginStart="6dp" />

            </LinearLayout>

            <!-- Save with Priority Section -->
            <LinearLayout
                android:id="@+id/save_priority_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:background="#F8F9FA"
                android:padding="18dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Save Event with Priority"
                    android:textSize="15sp"
                    android:textColor="#424242"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="14dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Priority Level"
                    android:textSize="12sp"
                    android:textColor="#757575"
                    android:fontFamily="sans-serif"
                    android:layout_marginBottom="6dp" />

                <Spinner
                    android:id="@+id/priority_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/spinner_background"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Note (Optional)"
                    android:textSize="12sp"
                    android:textColor="#757575"
                    android:fontFamily="sans-serif"
                    android:layout_marginBottom="6dp" />

                <EditText
                    android:id="@+id/comment_input"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:background="@drawable/edit_text_background"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"
                    android:hint="Add your note here..."
                    android:maxLength="100"
                    android:textSize="14sp"
                    android:textColor="#1A1A1A"
                    android:inputType="text"
                    android:imeOptions="actionDone"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/cancel_save_button"
                        android:layout_width="0dp"
                        android:layout_height="46dp"
                        android:layout_weight="1"
                        android:text="Cancel"
                        android:textColor="#757575"
                        android:textSize="14sp"
                        android:background="@drawable/action_button_secondary_bg"
                        android:textAllCaps="false"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginEnd="8dp" />

                    <Button
                        android:id="@+id/confirm_save_button"
                        android:layout_width="0dp"
                        android:layout_height="46dp"
                        android:layout_weight="1"
                        android:text="Save Event"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:background="@drawable/save_button_background"
                        android:textAllCaps="false"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginStart="8dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Action Buttons Container -->
            <LinearLayout
                android:id="@+id/action_buttons_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:background="#FAFBFC"
                android:padding="18dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Additional Actions"
                    android:textSize="15sp"
                    android:textColor="#424242"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="14dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <Button
                        android:id="@+id/download_image_button"
                        android:layout_width="0dp"
                        android:layout_height="46dp"
                        android:layout_weight="1"
                        android:text="Download"
                        android:textSize="13sp"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/action_button_bg"
                        android:textAllCaps="false"
                        android:fontFamily="sans-serif-medium"
                        android:drawableTop="@drawable/ic_download"
                        android:drawableTint="#FFFFFF"
                        android:drawablePadding="4dp"
                        android:layout_marginEnd="6dp" />

                    <Button
                        android:id="@+id/share_image_button"
                        android:layout_width="0dp"
                        android:layout_height="46dp"
                        android:layout_weight="1"
                        android:text="Share"
                        android:textSize="13sp"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/action_button_bg"
                        android:textAllCaps="false"
                        android:fontFamily="sans-serif-medium"
                        android:drawableTop="@drawable/ic_share"
                        android:drawableTint="#FFFFFF"
                        android:drawablePadding="4dp"
                        android:layout_marginStart="6dp" />

                </LinearLayout>

                <Button
                    android:id="@+id/download_event_pdf_button"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:layout_marginTop="10dp"
                    android:text="Download as PDF"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/pdf_button_background"
                    android:textAllCaps="false"
                    android:fontFamily="sans-serif-medium"
                    android:drawableStart="@drawable/ic_pdf"
                    android:drawableTint="#FFFFFF"
                    android:drawablePadding="8dp"
                    android:gravity="center" />

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>