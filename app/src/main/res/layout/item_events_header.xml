<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- Premium Channel Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:background="@drawable/header_gradient_bg"
        android:elevation="4dp">

        <!-- Top Row: Back Button + Channel Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Back Button -->
            <LinearLayout
                android:id="@+id/back_button_header"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/back_button_bg"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_arrow_back"
                    android:tint="#FFFFFF"
                    android:contentDescription="Back" />

            </LinearLayout>

            <!-- Channel Info Container -->
            <LinearLayout
                android:id="@+id/channel_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Channel Icon -->
                <FrameLayout
                    android:layout_width="48dp"
                    android:layout_height="48dp">

                    <View
                        android:id="@+id/channel_badge"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/circle_background" />

                    <TextView
                        android:id="@+id/channel_icon_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="VD"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:fontFamily="sans-serif-medium" />

                </FrameLayout>

                <!-- Channel Name and Event Count -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="14dp">

                    <TextView
                        android:id="@+id/channel_name_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sijua - Vehicle Detection"
                        android:textSize="17sp"
                        android:textColor="#FFFFFF"
                        android:fontFamily="sans-serif-medium"
                        android:letterSpacing="0.01"
                        android:maxLines="1"
                        android:ellipsize="end" />

                    <TextView
                        android:id="@+id/event_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12 events"
                        android:textSize="13sp"
                        android:textColor="#E3F2FD"
                        android:fontFamily="sans-serif"
                        android:layout_marginTop="2dp"
                        android:maxLines="1" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Bottom Row: Action Icons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="6dp"
            android:layout_marginStart="56dp">

            <!-- PDF Download Icon -->
            <FrameLayout
                android:id="@+id/download_pdf_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/icon_button_bg"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginEnd="8dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_pdf"
                    android:tint="#FFFFFF"
                    android:contentDescription="Download PDF" />

            </FrameLayout>

            <!-- Filter Icon -->
            <FrameLayout
                android:id="@+id/filter_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/icon_button_bg"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginEnd="8dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_filter"
                    android:tint="#FFFFFF"
                    android:contentDescription="Filter" />

            </FrameLayout>

            <!-- Search Icon -->
            <FrameLayout
                android:id="@+id/search_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/icon_button_bg"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_search"
                    android:tint="#FFFFFF"
                    android:contentDescription="Search" />

            </FrameLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Search Bar (Initially Hidden) -->
    <LinearLayout
        android:id="@+id/search_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:elevation="2dp"
        android:visibility="gone">

        <EditText
            android:id="@+id/search_input"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/search_input_bg"
            android:hint="Search events..."
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textSize="15sp"
            android:textColor="#1A1A1A"
            android:textColorHint="#9E9E9E"
            android:fontFamily="sans-serif"
            android:inputType="text"
            android:imeOptions="actionSearch"
            android:maxLines="1" />

        <FrameLayout
            android:id="@+id/close_search"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="12dp"
            android:background="@drawable/icon_button_light_bg"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_close"
                android:tint="#757575"
                android:contentDescription="Close search" />

        </FrameLayout>

    </LinearLayout>

    <!-- Filter Options (Initially Hidden) -->
    <LinearLayout
        android:id="@+id/filter_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FAFBFC"
        android:padding="16dp"
        android:elevation="2dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Filter by Date"
            android:textSize="13sp"
            android:textColor="#424242"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <Spinner
                android:id="@+id/date_filter_spinner"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@drawable/spinner_background"
                android:paddingStart="14dp"
                android:paddingEnd="14dp" />

            <Button
                android:id="@+id/apply_filter_button"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginStart="12dp"
                android:text="Apply"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/save_button_background"
                android:textAllCaps="false"
                android:fontFamily="sans-serif-medium"
                android:paddingStart="24dp"
                android:paddingEnd="24dp" />

        </LinearLayout>

        <!-- Custom Date Range (Initially Hidden) -->
        <LinearLayout
            android:id="@+id/custom_date_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="From Date"
                android:textSize="12sp"
                android:textColor="#757575"
                android:fontFamily="sans-serif"
                android:layout_marginBottom="6dp" />

            <Button
                android:id="@+id/from_date_button"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Select Date"
                android:textSize="14sp"
                android:textColor="#424242"
                android:background="@drawable/edit_text_background"
                android:textAllCaps="false"
                android:fontFamily="sans-serif"
                android:gravity="start|center_vertical"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:layout_marginBottom="14dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="To Date"
                android:textSize="12sp"
                android:textColor="#757575"
                android:fontFamily="sans-serif"
                android:layout_marginBottom="6dp" />

            <Button
                android:id="@+id/to_date_button"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Select Date"
                android:textSize="14sp"
                android:textColor="#424242"
                android:background="@drawable/edit_text_background"
                android:textAllCaps="false"
                android:fontFamily="sans-serif"
                android:gravity="start|center_vertical"
                android:paddingStart="14dp"
                android:paddingEnd="14dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Subtle Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F0F0F0" />

    <!-- Date Divider Section (TODAY/YESTERDAY) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="20dp"
        android:paddingBottom="16dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:background="#FAFBFC">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="#E0E0E0" />

        <TextView
            android:id="@+id/date_divider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TODAY"
            android:textSize="12sp"
            android:textColor="#757575"
            android:fontFamily="sans-serif-medium"
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            android:letterSpacing="0.08" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="#E0E0E0" />

    </LinearLayout>

</LinearLayout>