<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- Premium Channel Header - Sticky -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:background="@drawable/header_gradient_bg"
        android:elevation="4dp"
        android:clipToPadding="false">

        <!-- Single Row: Back Button + Channel Info + Mute + Menu -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:minHeight="56dp">

            <!-- Back Button -->
            <ImageView
                android:id="@+id/back_button_header"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:src="@drawable/ic_arrow_back"
                android:tint="#FFFFFF"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="Back" />

            <!-- Channel Info Container -->
            <LinearLayout
                android:id="@+id/channel_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Channel Icon -->
                <FrameLayout
                    android:layout_width="48dp"
                    android:layout_height="48dp">

                    <View
                        android:id="@+id/channel_badge"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/circle_background" />

                    <TextView
                        android:id="@+id/channel_icon_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="OR"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:fontFamily="sans-serif-medium" />

                </FrameLayout>

                <!-- Channel Name and Event Count -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:id="@+id/channel_name_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Block 2 - Off-Route Alert"
                        android:textSize="17sp"
                        android:textColor="#FFFFFF"
                        android:fontFamily="sans-serif-medium"
                        android:maxLines="1"
                        android:ellipsize="end" />

                    <TextView
                        android:id="@+id/event_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="25 events"
                        android:textSize="13sp"
                        android:textColor="#E3F2FD"
                        android:fontFamily="sans-serif"
                        android:layout_marginTop="2dp"
                        android:maxLines="1" />

                </LinearLayout>

            </LinearLayout>

            <!-- Mute/Unmute Button (Bell Icon) -->
            <ImageView
                android:id="@+id/mute_button_header"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:src="@drawable/ic_notifications"
                android:tint="#FFFFFF"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="Mute notifications" />

            <!-- Three Dot Menu Button -->
            <ImageView
                android:id="@+id/menu_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:src="@drawable/ic_more_vert"
                android:tint="#FFFFFF"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="Menu" />

        </LinearLayout>

    </LinearLayout>

    <!-- Active Filters Section -->
    <LinearLayout
        android:id="@+id/active_filters_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:background="#F5F7FA"
        android:visibility="gone">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Search Filter Chip -->
                <LinearLayout
                    android:id="@+id/search_chip"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:orientation="horizontal"
                    android:background="@drawable/filter_chip_bg"
                    android:gravity="center_vertical"
                    android:paddingStart="12dp"
                    android:paddingEnd="8dp"
                    android:layout_marginEnd="8dp"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_search"
                        android:tint="#1976D2"
                        android:layout_marginEnd="6dp" />

                    <TextView
                        android:id="@+id/search_chip_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Search: gate"
                        android:textSize="13sp"
                        android:textColor="#1976D2"
                        android:fontFamily="sans-serif-medium"
                        android:maxLength="30"
                        android:maxLines="1"
                        android:ellipsize="end" />

                    <ImageView
                        android:id="@+id/search_chip_close"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_close"
                        android:tint="#1976D2"
                        android:padding="4dp"
                        android:layout_marginStart="4dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"
                        android:contentDescription="Remove search filter" />

                </LinearLayout>

                <!-- Date Filter Chip -->
                <LinearLayout
                    android:id="@+id/date_filter_chip"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:orientation="horizontal"
                    android:background="@drawable/filter_chip_bg"
                    android:gravity="center_vertical"
                    android:paddingStart="12dp"
                    android:paddingEnd="8dp"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_calendar"
                        android:tint="#1976D2"
                        android:layout_marginEnd="6dp" />

                    <TextView
                        android:id="@+id/date_filter_chip_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Today"
                        android:textSize="13sp"
                        android:textColor="#1976D2"
                        android:fontFamily="sans-serif-medium"
                        android:maxLines="1"
                        android:ellipsize="end" />

                    <ImageView
                        android:id="@+id/date_filter_chip_close"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_close"
                        android:tint="#1976D2"
                        android:padding="4dp"
                        android:layout_marginStart="4dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"
                        android:contentDescription="Remove date filter" />

                </LinearLayout>

            </LinearLayout>

        </HorizontalScrollView>

    </LinearLayout>

    <!-- Subtle Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E8E8E8" />

    <!-- Date Divider Section (TODAY/YESTERDAY) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:background="#FAFBFC">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="#E0E0E0" />

        <TextView
            android:id="@+id/date_divider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TODAY"
            android:textSize="12sp"
            android:textColor="#757575"
            android:fontFamily="sans-serif-medium"
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            android:letterSpacing="0.08" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="#E0E0E0" />

    </LinearLayout>

</LinearLayout>