<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:fitsSystemWindows="true">

    <!-- ✅ Status Bar Spacer for Camera Cutout -->
    <View
        android:id="@+id/status_bar_spacer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#FFFFFF" />

    <!-- ✅ Top Divider Line to separate from status bar -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0" />

    <!-- ✅ Additional padding below status bar -->
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#FFFFFF" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:paddingStart="4dp"
        android:paddingEnd="16dp">

        <ImageView
            android:id="@+id/back_button_header"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="12dp"
            android:contentDescription="Back"
            android:tint="#1A1A1A" />

        <LinearLayout
            android:id="@+id/channel_info_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/back_button_header"
            android:layout_centerVertical="true"
            android:layout_marginStart="0dp"
            android:layout_toStartOf="@id/action_buttons_container"
            android:layout_marginEnd="8dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <View
                android:id="@+id/channel_badge"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/circle_background" />

            <TextView
                android:id="@+id/channel_icon_text"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="-36dp"
                android:gravity="center"
                android:text="VD"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <TextView
                    android:id="@+id/channel_name_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sijua - Vehicle Detection"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#1A1A1A"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/event_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="24 events"
                    android:textSize="12sp"
                    android:textColor="#757575"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/action_buttons_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/mute_button_header"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_notifications"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="12dp"
                android:tint="#424242"
                android:contentDescription="Mute notifications" />

            <ImageView
                android:id="@+id/menu_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_more_vert"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="12dp"
                android:tint="#424242"
                android:contentDescription="More options" />

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/active_filters_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/search_chip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/filter_chip_background"
            android:paddingStart="12dp"
            android:paddingEnd="8dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:layout_marginEnd="8dp"
            android:gravity="center_vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/search_chip_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search: gate"
                android:textSize="13sp"
                android:textColor="#1A1A1A"
                android:maxLines="1"
                android:ellipsize="end"
                android:maxWidth="150dp" />

            <ImageView
                android:id="@+id/search_chip_close"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_close"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="4dp"
                android:layout_marginStart="4dp"
                android:tint="#757575"
                android:contentDescription="Clear search" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/date_filter_chip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/filter_chip_background"
            android:paddingStart="12dp"
            android:paddingEnd="8dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:gravity="center_vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/date_filter_chip_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today"
                android:textSize="13sp"
                android:textColor="#1A1A1A"
                android:maxLines="1"
                android:ellipsize="end"
                android:maxWidth="150dp" />

            <ImageView
                android:id="@+id/date_filter_chip_close"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_close"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="4dp"
                android:layout_marginStart="4dp"
                android:tint="#757575"
                android:contentDescription="Clear filter" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/timeline_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="4dp"
            android:paddingBottom="4dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Event Timeline"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#1A1A1A" />

            <ImageView
                android:id="@+id/toggle_timeline_button"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_expand_more"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="6dp"
                android:tint="?attr/colorPrimary"
                android:contentDescription="Toggle timeline" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/timeline_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/timeline_mode_buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">

                <TextView
                    android:id="@+id/hour_mode_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Hour"
                    android:textSize="12sp"
                    android:textAlignment="center"
                    android:background="@drawable/timeline_mode_button_normal"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/day_mode_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Day"
                    android:textSize="12sp"
                    android:textAlignment="center"
                    android:background="@drawable/timeline_mode_button_selected"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/week_mode_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Week"
                    android:textSize="12sp"
                    android:textAlignment="center"
                    android:background="@drawable/timeline_mode_button_normal"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/month_mode_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Month"
                    android:textSize="12sp"
                    android:textAlignment="center"
                    android:background="@drawable/timeline_mode_button_normal"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp" />

            </LinearLayout>

            <com.example.iccc_alert_app.EventTimelineView
                android:id="@+id/event_timeline"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="4dp" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/date_divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TODAY"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="#757575"
        android:letterSpacing="0.05"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="8dp"
        android:background="#F8F9FA" />

</LinearLayout>