<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA">

    <!-- Main Content Area -->
    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_bar">

        <!-- RecyclerView for Events -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/events_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingTop="8dp"
            android:paddingBottom="24dp"
            android:scrollbars="none"
            android:overScrollMode="never" />

        <!-- Premium Empty State -->
        <LinearLayout
            android:id="@+id/empty_events_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="48dp"
            android:visibility="gone">

            <!-- Empty state icon with subtle background -->
            <FrameLayout
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/empty_state_bg">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_image_error"
                    android:tint="#BDBDBD"
                    android:contentDescription="No events" />

            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No Events Yet"
                android:textSize="20sp"
                android:textColor="#1A1A1A"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.01"
                android:layout_marginTop="24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Events will appear here as they occur"
                android:textSize="14sp"
                android:textColor="#757575"
                android:fontFamily="sans-serif"
                android:textAlignment="center"
                android:lineSpacingExtra="2dp"
                android:layout_marginTop="8dp" />

        </LinearLayout>

    </FrameLayout>

    <!-- Premium Bottom Bar -->
    <RelativeLayout
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF"
        android:elevation="12dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">

        <!-- Subtle top border -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentTop="true"
            android:background="#F0F0F0" />

        <!-- Mute/Unmute Button -->
        <Button
            android:id="@+id/mute_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:text="Mute Notifications"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/mute_button_background"
            android:textAllCaps="false"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.02"
            android:drawablePadding="10dp"
            android:gravity="center" />

    </RelativeLayout>

</RelativeLayout>