<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="6dp"
    android:paddingBottom="6dp">

    <!-- GPS Event Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Map Preview Container (Clickable) -->
            <FrameLayout
                android:id="@+id/map_preview_frame"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="#F5F7FA"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <!-- Map Preview (actual mini map) -->
                <org.osmdroid.views.MapView
                    android:id="@+id/map_preview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="false"
                    android:focusable="false" />

                <!-- Overlay with icon when loading -->
                <FrameLayout
                    android:id="@+id/map_loading_overlay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#80000000"
                    android:clickable="false"
                    android:visibility="gone">

                    <ProgressBar
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:indeterminateTint="#FFFFFF" />
                </FrameLayout>

                <!-- Event Badge (at top left) -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|top"
                    android:layout_margin="16dp"
                    android:background="@drawable/badge_background"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:elevation="4dp"
                    android:clickable="false"
                    android:focusable="false">

                    <View
                        android:id="@+id/event_badge"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:background="@drawable/circle_background"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/event_icon_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="OR"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:fontFamily="sans-serif-medium" />
                </LinearLayout>

            </FrameLayout>

            <!-- Event Info Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="18dp">

                <TextView
                    android:id="@+id/event_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Off-Route Alert"
                    android:textSize="18sp"
                    android:textStyle="normal"
                    android:textColor="#1A1A1A"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="0.01"
                    android:maxLines="2"
                    android:ellipsize="end" />

                <!-- Vehicle Information -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="12dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:src="@drawable/ic_vehicle"
                            android:tint="#757575"
                            android:contentDescription="Vehicle" />

                        <TextView
                            android:id="@+id/vehicle_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="JH10CK0157"
                            android:textSize="14sp"
                            android:textColor="#1A1A1A"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginStart="6dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="6dp">

                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:src="@drawable/ic_transporter"
                            android:tint="#757575"
                            android:contentDescription="Transporter" />

                        <TextView
                            android:id="@+id/vehicle_transporter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ABC Logistics"
                            android:textSize="14sp"
                            android:textColor="#757575"
                            android:fontFamily="sans-serif"
                            android:layout_marginStart="6dp" />

                    </LinearLayout>

                    <!-- Alert Sub-Type (for tamper events) -->
                    <LinearLayout
                        android:id="@+id/alert_subtype_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="6dp"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:src="@drawable/ic_warning"
                            android:tint="#FF5722"
                            android:contentDescription="Alert type" />

                        <TextView
                            android:id="@+id/alert_subtype"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Wire Cut"
                            android:textSize="14sp"
                            android:textColor="#FF5722"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginStart="6dp" />

                    </LinearLayout>

                    <!-- Geofence Info -->
                    <LinearLayout
                        android:id="@+id/geofence_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="6dp"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:src="@drawable/ic_geofence"
                            android:tint="#2196F3"
                            android:contentDescription="Geofence" />

                        <TextView
                            android:id="@+id/geofence_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Route A-B"
                            android:textSize="14sp"
                            android:textColor="#2196F3"
                            android:fontFamily="sans-serif"
                            android:layout_marginStart="6dp" />

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#F0F0F0"
                    android:layout_marginTop="14dp"
                    android:layout_marginBottom="14dp" />

                <!-- Timestamp -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/event_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Nov 13, 2025"
                        android:textSize="13sp"
                        android:textColor="#616161"
                        android:fontFamily="sans-serif" />

                    <TextView
                        android:id="@+id/event_timestamp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="17:04:32"
                        android:textSize="13sp"
                        android:textColor="#616161"
                        android:fontFamily="sans-serif-medium" />

                </LinearLayout>

            </LinearLayout>

            <!-- Action Button -->
            <Button
                android:id="@+id/view_on_map_button"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="18dp"
                android:layout_marginBottom="18dp"
                android:text="View Location on Map"
                android:textSize="15sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/action_button_bg"
                android:textAllCaps="false"
                android:fontFamily="sans-serif-medium"
                android:drawableStart="@drawable/ic_map"
                android:drawableTint="#FFFFFF"
                android:drawablePadding="8dp"
                android:gravity="center" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>