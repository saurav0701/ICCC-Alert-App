<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA">

    <!-- Loading View with Modern Progress Indicator -->
    <LinearLayout
        android:id="@+id/profile_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="visible">

        <ProgressBar
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:indeterminateTint="?attr/colorPrimary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loading profile..."
            android:textSize="14sp"
            android:textColor="#757575"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif" />

    </LinearLayout>

    <!-- Content View with Enhanced Design -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/profile_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Profile Header Banner -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@drawable/profile_header_gradient">

                <!-- Avatar with Enhanced Shadow -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/avatar_card"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="50dp"
                    app:cardElevation="8dp"
                    android:elevation="8dp">

                    <ImageView
                        android:id="@+id/profile_avatar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_default_avatar"
                        android:scaleType="centerCrop"
                        android:contentDescription="Profile Picture" />

                    <!-- Verified Badge -->
                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_gravity="bottom|end"
                        android:layout_margin="2dp"
                        android:src="@drawable/ic_verified_badge"
                        android:contentDescription="Verified" />

                </androidx.cardview.widget.CardView>

            </RelativeLayout>

            <!-- Main Content Area -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="8dp"
                android:paddingBottom="24dp">

                <!-- Name and Phone Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:paddingBottom="16dp">

                    <TextView
                        android:id="@+id/profile_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="User Name"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#1A1A1A"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/profile_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+91 XXXXXXXXXX"
                        android:textSize="15sp"
                        android:textColor="#616161"
                        android:fontFamily="sans-serif" />

                </LinearLayout>

                <!-- Info Cards Container -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp">

                    <!-- Professional Information Card -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="3dp"
                        android:layout_marginBottom="16dp"
                        app:cardBackgroundColor="#FFFFFF">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="20dp">

                            <!-- Card Title -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginBottom="20dp">

                                <View
                                    android:layout_width="4dp"
                                    android:layout_height="24dp"
                                    android:background="?attr/colorPrimary"
                                    android:layout_marginEnd="12dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Professional Information"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="#1A1A1A"
                                    android:fontFamily="sans-serif-medium" />

                            </LinearLayout>

                            <!-- Designation -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginBottom="18dp">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_work"
                                    android:tint="?attr/colorPrimary"
                                    android:layout_marginEnd="16dp"
                                    android:contentDescription="Designation" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Designation"
                                        android:textSize="11sp"
                                        android:textColor="#9E9E9E"
                                        android:fontFamily="sans-serif-medium"
                                        android:letterSpacing="0.05"
                                        android:textAllCaps="true" />

                                    <TextView
                                        android:id="@+id/profile_designation"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Engineer"
                                        android:textSize="16sp"
                                        android:textColor="#212121"
                                        android:fontFamily="sans-serif"
                                        android:layout_marginTop="4dp" />

                                </LinearLayout>

                            </LinearLayout>

                            <!-- Area -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginBottom="18dp">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_location"
                                    android:tint="?attr/colorPrimary"
                                    android:layout_marginEnd="16dp"
                                    android:contentDescription="Area" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Area"
                                        android:textSize="11sp"
                                        android:textColor="#9E9E9E"
                                        android:fontFamily="sans-serif-medium"
                                        android:letterSpacing="0.05"
                                        android:textAllCaps="true" />

                                    <TextView
                                        android:id="@+id/profile_area"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Sijua"
                                        android:textSize="16sp"
                                        android:textColor="#212121"
                                        android:fontFamily="sans-serif"
                                        android:layout_marginTop="4dp" />

                                </LinearLayout>

                            </LinearLayout>

                            <!-- Working For -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_business"
                                    android:tint="?attr/colorPrimary"
                                    android:layout_marginEnd="16dp"
                                    android:contentDescription="Organization" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Working For"
                                        android:textSize="11sp"
                                        android:textColor="#9E9E9E"
                                        android:fontFamily="sans-serif-medium"
                                        android:letterSpacing="0.05"
                                        android:textAllCaps="true" />

                                    <TextView
                                        android:id="@+id/profile_working_for"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="BCCL"
                                        android:textSize="16sp"
                                        android:textColor="#212121"
                                        android:fontFamily="sans-serif"
                                        android:layout_marginTop="4dp" />

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Subscribed Channels Card -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="3dp"
                        android:layout_marginBottom="16dp"
                        app:cardBackgroundColor="#FFFFFF">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <!-- Header -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:padding="20dp"
                                android:paddingBottom="16dp">

                                <View
                                    android:layout_width="4dp"
                                    android:layout_height="24dp"
                                    android:background="?attr/colorPrimary"
                                    android:layout_marginEnd="12dp" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Subscribed Channels"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="#1A1A1A"
                                    android:fontFamily="sans-serif-medium" />

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/ic_channels"
                                    android:tint="?attr/colorPrimary"
                                    android:contentDescription="Channels" />

                            </LinearLayout>

                            <!-- Divider -->
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#EEEEEE" />

                            <!-- Channels Container -->
                            <LinearLayout
                                android:id="@+id/subscribed_channels_container"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="20dp" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Logout Button with Modern Design -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/logout_button"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="Logout"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-medium"
                        app:icon="@drawable/ic_logout"
                        app:iconGravity="textStart"
                        app:iconSize="20dp"
                        app:iconTint="#FFFFFF"
                        app:cornerRadius="16dp"
                        app:backgroundTint="#F44336"
                        app:rippleColor="#FFFFFF"
                        android:elevation="4dp"
                        app:strokeWidth="0dp"
                        style="@style/Widget.MaterialComponents.Button" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>