<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorPrimary"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="24dp"
    android:paddingBottom="16dp"
    android:gravity="center_horizontal"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:minHeight="160dp"
    android:fitsSystemWindows="true">

    <!-- User Avatar Circle -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="12dp"
        app:cardCornerRadius="32dp"
        app:cardElevation="4dp">

        <TextView
            android:id="@+id/user_avatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/telegram_blue_light"
            android:gravity="center"
            android:text="IC"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />
    </com.google.android.material.card.MaterialCardView>

    <!-- User Name -->
    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ICCC User"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginBottom="4dp" />

    <!-- User Phone -->
    <TextView
        android:id="@+id/user_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+91 XXXXXXXXXX"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:alpha="0.9"
        android:textAlignment="center"
        android:layout_marginBottom="4dp" />

    <!-- User Info (Designation • Area) -->
    <TextView
        android:id="@+id/user_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Officer • ICCC"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:alpha="0.7"
        android:textAlignment="center"
        android:layout_marginBottom="12dp" />

    <!-- View Profile Button -->
    <TextView
        android:id="@+id/view_profile_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Profile"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        android:background="?attr/selectableItemBackground"
        android:padding="8dp"
        android:drawableEnd="@android:drawable/ic_menu_edit"
        android:drawablePadding="8dp"
        android:drawableTint="@color/white" />

</LinearLayout>