<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@android:color/white">

    <!-- Dialog Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search Events"
        android:textSize="20sp"
        android:textColor="#1A1A1A"
        android:fontFamily="sans-serif-medium"
        android:layout_marginBottom="20dp" />

    <!-- Search Input -->
    <EditText
        android:id="@+id/search_input"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@drawable/search_input_bg"
        android:hint="Search by location or event type..."
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textSize="15sp"
        android:textColor="#1A1A1A"
        android:textColorHint="#9E9E9E"
        android:fontFamily="sans-serif"
        android:inputType="text"
        android:imeOptions="actionSearch"
        android:maxLines="1"
        android:drawableStart="@drawable/ic_search"
        android:drawableTint="#757575"
        android:drawablePadding="12dp"
        android:layout_marginBottom="20dp" />

    <!-- Helper Text -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search by event location or type (e.g., Gate 1, Vehicle Detection)"
        android:textSize="12sp"
        android:textColor="#757575"
        android:fontFamily="sans-serif"
        android:layout_marginBottom="20dp" />

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        android:layout_marginBottom="20dp" />

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/clear_search_button"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:text="Clear"
            android:textSize="14sp"
            android:textColor="#757575"
            android:background="@drawable/action_button_secondary_bg"
            android:textAllCaps="false"
            android:fontFamily="sans-serif-medium"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_marginEnd="12dp" />

        <Button
            android:id="@+id/search_button"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:text="Search"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/save_button_background"
            android:textAllCaps="false"
            android:fontFamily="sans-serif-medium"
            android:paddingStart="24dp"
            android:paddingEnd="24dp" />

    </LinearLayout>

</LinearLayout>