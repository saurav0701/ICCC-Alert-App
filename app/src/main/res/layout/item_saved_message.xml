<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="8dp"
    android:paddingEnd="8dp"
    android:paddingTop="3dp"
    android:paddingBottom="3dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="0.5dp"
        app:cardBackgroundColor="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header with Icon, Type and Location -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:paddingTop="12dp"
                android:paddingBottom="8dp">

                <!-- Circular Event Icon -->
                <FrameLayout
                    android:id="@+id/saved_event_icon_container"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="12dp">

                    <View
                        android:id="@+id/saved_event_badge"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/circle_background" />

                    <TextView
                        android:id="@+id/saved_event_icon_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="VD"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF" />

                </FrameLayout>

                <!-- Event Details -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/saved_event_icon_container"
                    android:layout_toStartOf="@id/saved_delete_button"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/saved_event_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vehicle Detection"
                        android:textSize="15sp"
                        android:textStyle="normal"
                        android:textColor="#000000"
                        android:fontFamily="sans-serif-medium"
                        android:maxLines="1"
                        android:ellipsize="end" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="2dp">

                        <ImageView
                            android:layout_width="11dp"
                            android:layout_height="11dp"
                            android:src="@drawable/ic_location"
                            android:tint="#8A8A8A"
                            android:contentDescription="Location" />

                        <TextView
                            android:id="@+id/saved_event_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gate 1"
                            android:textSize="13sp"
                            android:textColor="#8A8A8A"
                            android:layout_marginStart="4dp"
                            android:maxLines="1"
                            android:ellipsize="end" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Delete Button -->
                <ImageView
                    android:id="@+id/saved_delete_button"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_delete"
                    android:tint="#F44336"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="4dp"
                    android:contentDescription="Delete" />

            </RelativeLayout>

            <!-- Image Container -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:background="#F0F2F5">

                <ImageView
                    android:id="@+id/saved_event_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:visibility="gone"
                    android:contentDescription="Event snapshot" />

                <LinearLayout
                    android:id="@+id/saved_loading_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:visibility="visible">

                    <ProgressBar
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:indeterminate="true"
                        android:indeterminateTint="#2196F3" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loading..."
                        android:textSize="12sp"
                        android:textColor="#8A8A8A"
                        android:layout_marginTop="10dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/saved_error_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_image_error"
                        android:tint="#CCCCCC"
                        android:contentDescription="Failed to load" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Photo unavailable"
                        android:textSize="12sp"
                        android:textColor="#8A8A8A"
                        android:layout_marginTop="8dp" />

                </LinearLayout>

                <View
                    android:id="@+id/saved_image_overlay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/image_shadow_overlay"
                    android:visibility="gone" />

            </FrameLayout>

            <!-- Priority and Comment Display -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#F8F9FA"
                android:padding="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Priority:"
                        android:textSize="13sp"
                        android:textColor="#666666"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/saved_priority_badge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="High"
                        android:textSize="12sp"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/priority_badge_background"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:layout_marginStart="8dp"
                        android:fontFamily="sans-serif-medium" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Comment:"
                    android:textSize="13sp"
                    android:textColor="#666666"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/saved_comment_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Important event - needs attention"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:layout_marginTop="4dp"
                    android:maxLines="3"
                    android:ellipsize="end" />

            </LinearLayout>

            <!-- Footer with Timestamp -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end|center_vertical"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:paddingTop="6dp"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/saved_event_timestamp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nov 10, 2025 14:32"
                    android:textSize="12sp"
                    android:textColor="#8A8A8A" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>