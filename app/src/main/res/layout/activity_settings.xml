<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:scrollbars="none"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="16dp"
        android:paddingBottom="24dp">

        <!-- Appearance Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="APPEARANCE"
            android:textSize="12sp"
            android:textColor="#9E9E9E"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.1"
            android:paddingStart="28dp"
            android:paddingEnd="28dp"
            android:paddingBottom="12dp" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#FFFFFF">

            <RelativeLayout
                android:id="@+id/theme_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="76dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <View
                    android:id="@+id/theme_icon_bg"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/info_icon_background"
                    android:backgroundTint="#E3F2FD" />

                <ImageView
                    android:id="@+id/theme_icon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_theme"
                    android:tint="?attr/colorPrimary"
                    android:padding="12dp"
                    android:contentDescription="Theme" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/theme_icon"
                    android:layout_toStartOf="@id/theme_arrow"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Theme"
                        android:textSize="16sp"
                        android:textColor="#1A1A1A"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/theme_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Light"
                        android:textSize="14sp"
                        android:textColor="#757575"
                        android:fontFamily="sans-serif"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/theme_arrow"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_arrow_forward"
                    android:tint="#BDBDBD"
                    android:contentDescription="Change theme" />

            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Notifications Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NOTIFICATIONS"
            android:textSize="12sp"
            android:textColor="#9E9E9E"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.1"
            android:paddingStart="28dp"
            android:paddingEnd="28dp"
            android:paddingBottom="12dp" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Enable Notifications -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="76dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp">

                    <View
                        android:id="@+id/notif_icon_bg"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/info_icon_background"
                        android:backgroundTint="#E8F5E9" />

                    <ImageView
                        android:id="@+id/notif_icon"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_notifications"
                        android:tint="#4CAF50"
                        android:padding="12dp"
                        android:contentDescription="Notifications" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/notif_icon"
                        android:layout_toStartOf="@id/switch_notifications"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Enable Notifications"
                            android:textSize="16sp"
                            android:textColor="#1A1A1A"
                            android:fontFamily="sans-serif-medium" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Get alerts for events"
                            android:textSize="14sp"
                            android:textColor="#757575"
                            android:fontFamily="sans-serif"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switch_notifications"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:checked="true" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#F5F5F5"
                    android:layout_marginStart="84dp" />

                <!-- Notification Status -->
                <RelativeLayout
                    android:id="@+id/notification_status_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="76dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <View
                        android:id="@+id/status_icon_bg"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/info_icon_background"
                        android:backgroundTint="#FFF3E0" />

                    <ImageView
                        android:id="@+id/status_icon"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_info"
                        android:tint="#FF9800"
                        android:padding="12dp"
                        android:contentDescription="Status" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/status_icon"
                        android:layout_toStartOf="@id/status_arrow"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Notification Status"
                            android:textSize="16sp"
                            android:textColor="#1A1A1A"
                            android:fontFamily="sans-serif-medium" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Check status &amp; permissions"
                            android:textSize="14sp"
                            android:textColor="#757575"
                            android:fontFamily="sans-serif"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/status_arrow"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_arrow_forward"
                        android:tint="#BDBDBD"
                        android:contentDescription="Check status" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#F5F5F5"
                    android:layout_marginStart="84dp" />

                <!-- Vibration -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="76dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp">

                    <View
                        android:id="@+id/vibrate_icon_bg"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/info_icon_background"
                        android:backgroundTint="#F3E5F5" />

                    <ImageView
                        android:id="@+id/vibrate_icon"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_vibration"
                        android:tint="#9C27B0"
                        android:padding="12dp"
                        android:contentDescription="Vibration" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/vibrate_icon"
                        android:layout_toStartOf="@id/switch_vibration"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Vibration"
                            android:textSize="16sp"
                            android:textColor="#1A1A1A"
                            android:fontFamily="sans-serif-medium" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Vibrate on new alerts"
                            android:textSize="14sp"
                            android:textColor="#757575"
                            android:fontFamily="sans-serif"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switch_vibration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:checked="true" />

                </RelativeLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Backend Configuration Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BACKEND CONFIGURATION"
            android:textSize="12sp"
            android:textColor="#9E9E9E"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.1"
            android:paddingStart="28dp"
            android:paddingEnd="28dp"
            android:paddingBottom="12dp" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#FFFFFF">

            <RelativeLayout
                android:id="@+id/backend_info_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="76dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <View
                    android:id="@+id/backend_icon_bg"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/info_icon_background"
                    android:backgroundTint="#E1F5FE" />

                <ImageView
                    android:id="@+id/backend_icon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@android:drawable/ic_menu_compass"
                    android:tint="#03A9F4"
                    android:padding="12dp"
                    android:contentDescription="Backend" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/backend_icon"
                    android:layout_toStartOf="@id/backend_chevron"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Backend Server"
                        android:textSize="16sp"
                        android:textColor="#1A1A1A"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/backend_info_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Loading..."
                        android:textSize="13sp"
                        android:textColor="#757575"
                        android:fontFamily="monospace"
                        android:layout_marginTop="4dp"
                        android:maxLines="2"
                        android:ellipsize="end" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/backend_chevron"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_arrow_forward"
                    android:tint="#BDBDBD"
                    android:contentDescription="View details" />

            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Storage Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="STORAGE"
            android:textSize="12sp"
            android:textColor="#9E9E9E"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.1"
            android:paddingStart="28dp"
            android:paddingEnd="28dp"
            android:paddingBottom="12dp" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:id="@+id/storage_info_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Loading storage info..."
                    android:textSize="15sp"
                    android:textColor="#424242"
                    android:lineSpacingExtra="4dp"
                    android:layout_marginBottom="20dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/clear_data_button"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Clear App Data"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif-medium"
                    app:icon="@drawable/ic_delete"
                    app:iconGravity="textStart"
                    app:iconSize="20dp"
                    app:iconTint="#FFFFFF"
                    app:cornerRadius="28dp"
                    app:backgroundTint="#FF5722"
                    app:rippleColor="#FFFFFF"
                    style="@style/Widget.Material3.Button" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Won't delete subscriptions or logout"
                    android:textSize="13sp"
                    android:textColor="#9E9E9E"
                    android:textStyle="italic"
                    android:layout_marginTop="12dp"
                    android:gravity="center" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Support Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SUPPORT"
            android:textSize="12sp"
            android:textColor="#9E9E9E"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.1"
            android:paddingStart="28dp"
            android:paddingEnd="28dp"
            android:paddingBottom="12dp" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#FFFFFF">

            <RelativeLayout
                android:id="@+id/help_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="76dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <View
                    android:id="@+id/help_icon_bg"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/info_icon_background"
                    android:backgroundTint="#E8EAF6" />

                <ImageView
                    android:id="@+id/help_icon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_help"
                    android:tint="#3F51B5"
                    android:padding="12dp"
                    android:contentDescription="Help" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/help_icon"
                    android:layout_toStartOf="@id/help_arrow"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Help &amp; Support"
                        android:textSize="16sp"
                        android:textColor="#1A1A1A"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="FAQs and troubleshooting"
                        android:textSize="14sp"
                        android:textColor="#757575"
                        android:fontFamily="sans-serif"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/help_arrow"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_arrow_forward"
                    android:tint="#BDBDBD"
                    android:contentDescription="Open help" />

            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>