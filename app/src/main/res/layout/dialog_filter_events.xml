<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@android:color/white">

    <!-- Dialog Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filter Events"
        android:textSize="20sp"
        android:textColor="#1A1A1A"
        android:fontFamily="sans-serif-medium"
        android:layout_marginBottom="20dp" />

    <!-- Filter by Date Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filter by Date"
        android:textSize="13sp"
        android:textColor="#757575"
        android:fontFamily="sans-serif-medium"
        android:layout_marginBottom="12dp" />

    <Spinner
        android:id="@+id/date_filter_spinner"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/spinner_background"
        android:paddingStart="14dp"
        android:paddingEnd="14dp"
        android:layout_marginBottom="16dp" />

    <!-- Custom Date Range Section (Initially Hidden) -->
    <LinearLayout
        android:id="@+id/custom_date_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <!-- From Date/Time -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="From Date &amp; Time"
            android:textSize="12sp"
            android:textColor="#757575"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="6dp" />

        <Button
            android:id="@+id/from_datetime_button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Select Date &amp; Time"
            android:textSize="14sp"
            android:textColor="#424242"
            android:background="@drawable/edit_text_background"
            android:textAllCaps="false"
            android:fontFamily="sans-serif"
            android:gravity="start|center_vertical"
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            android:drawableEnd="@drawable/ic_calendar"
            android:drawableTint="#757575"
            android:layout_marginBottom="16dp" />

        <!-- To Date/Time -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To Date &amp; Time"
            android:textSize="12sp"
            android:textColor="#757575"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="6dp" />

        <Button
            android:id="@+id/to_datetime_button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Select Date &amp; Time"
            android:textSize="14sp"
            android:textColor="#424242"
            android:background="@drawable/edit_text_background"
            android:textAllCaps="false"
            android:fontFamily="sans-serif"
            android:gravity="start|center_vertical"
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            android:drawableEnd="@drawable/ic_calendar"
            android:drawableTint="#757575"
            android:layout_marginBottom="16dp" />

    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="20dp" />

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/clear_filter_button"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:text="Clear Filters"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/action_button_secondary_bg"
            android:textAllCaps="false"
            android:fontFamily="sans-serif-medium"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_marginEnd="12dp" />

        <Button
            android:id="@+id/apply_filter_button"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:text="Apply Filters"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/save_button_background"
            android:textAllCaps="false"
            android:fontFamily="sans-serif-medium"
            android:paddingStart="24dp"
            android:paddingEnd="24dp" />

    </LinearLayout>

</LinearLayout>