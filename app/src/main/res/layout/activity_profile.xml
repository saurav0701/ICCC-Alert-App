<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:fitsSystemWindows="false">

    <!-- Loading Indicator -->
    <ProgressBar
        android:id="@+id/profile_loading"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:indeterminateTint="?attr/colorPrimary"
        android:visibility="visible" />

    <!-- Content -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/profile_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Profile Header Card with Gradient -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                app:cardCornerRadius="0dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/profile_header_gradient"
                    android:paddingTop="32dp"
                    android:paddingBottom="80dp">

                    <!-- Avatar -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        android:layout_gravity="center_horizontal"
                        app:cardCornerRadius="48dp"
                        app:cardElevation="8dp"
                        app:strokeWidth="4dp"
                        app:strokeColor="#FFFFFF">

                        <ImageView
                            android:id="@+id/profile_avatar"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_default_avatar"
                            android:scaleType="centerCrop"
                            android:contentDescription="Profile Picture" />

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Name -->
                    <TextView
                        android:id="@+id/profile_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="16dp"
                        android:text="User Name"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:fontFamily="sans-serif-medium" />

                    <!-- Phone -->
                    <TextView
                        android:id="@+id/profile_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="4dp"
                        android:text="+91 XXXXXXXXXX"
                        android:textSize="15sp"
                        android:textColor="#FFFFFF"
                        android:alpha="0.9" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Info Cards Container (Overlapping) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="-60dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="16dp">

                <!-- Professional Info Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="#FFFFFF">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="24dp">

                        <!-- Designation -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp">

                            <View
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/info_icon_background"
                                android:backgroundTint="#E3F2FD" />

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginStart="-40dp"
                                android:src="@drawable/ic_work"
                                android:tint="?attr/colorPrimary"
                                android:padding="8dp"
                                android:contentDescription="Designation" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="16dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="DESIGNATION"
                                    android:textSize="11sp"
                                    android:textColor="#9E9E9E"
                                    android:fontFamily="sans-serif-medium"
                                    android:letterSpacing="0.1" />

                                <TextView
                                    android:id="@+id/profile_designation"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Engineer"
                                    android:textSize="16sp"
                                    android:textColor="#212121"
                                    android:fontFamily="sans-serif-medium"
                                    android:layout_marginTop="4dp" />

                            </LinearLayout>

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#F0F0F0"
                            android:layout_marginTop="12dp"
                            android:layout_marginBottom="12dp" />

                        <!-- Area -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp">

                            <View
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/info_icon_background"
                                android:backgroundTint="#E8F5E9" />

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginStart="-40dp"
                                android:src="@drawable/ic_location"
                                android:tint="#4CAF50"
                                android:padding="8dp"
                                android:contentDescription="Area" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="16dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="AREA"
                                    android:textSize="11sp"
                                    android:textColor="#9E9E9E"
                                    android:fontFamily="sans-serif-medium"
                                    android:letterSpacing="0.1" />

                                <TextView
                                    android:id="@+id/profile_area"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Area"
                                    android:textSize="16sp"
                                    android:textColor="#212121"
                                    android:fontFamily="sans-serif-medium"
                                    android:layout_marginTop="4dp" />

                            </LinearLayout>

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#F0F0F0"
                            android:layout_marginTop="12dp"
                            android:layout_marginBottom="12dp" />

                        <!-- Organization -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp">

                            <View
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/info_icon_background"
                                android:backgroundTint="#FFF3E0" />

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginStart="-40dp"
                                android:src="@drawable/ic_business"
                                android:tint="#FF9800"
                                android:padding="8dp"
                                android:contentDescription="Organization" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="16dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="ORGANIZATION"
                                    android:textSize="11sp"
                                    android:textColor="#9E9E9E"
                                    android:fontFamily="sans-serif-medium"
                                    android:letterSpacing="0.1" />

                                <TextView
                                    android:id="@+id/profile_working_for"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Organization"
                                    android:textSize="16sp"
                                    android:textColor="#212121"
                                    android:fontFamily="sans-serif-medium"
                                    android:layout_marginTop="4dp" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Subscribed Channels Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="#FFFFFF">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Header -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="24dp"
                            android:paddingBottom="16dp">

                            <View
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/info_icon_background"
                                android:backgroundTint="#F3E5F5" />

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginStart="-40dp"
                                android:src="@drawable/ic_channels"
                                android:tint="#9C27B0"
                                android:padding="8dp"
                                android:contentDescription="Channels" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="16dp"
                                android:text="Subscribed Channels"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="#1A1A1A"
                                android:fontFamily="sans-serif-medium" />

                        </LinearLayout>

                        <!-- Channels Container -->
                        <LinearLayout
                            android:id="@+id/subscribed_channels_container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingStart="24dp"
                            android:paddingEnd="24dp"
                            android:paddingBottom="24dp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- TODO: Fix logout bugs before re-enabling -->
                <!-- Logout Button -->
                <!--
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/logout_button"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Logout"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"
                    app:icon="@drawable/ic_logout"
                    app:iconGravity="textStart"
                    app:iconSize="22dp"
                    app:iconTint="#FFFFFF"
                    app:cornerRadius="28dp"
                    app:backgroundTint="#F44336"
                    app:rippleColor="#FFFFFF"
                    android:elevation="2dp"
                    android:layout_marginBottom="24dp"
                    style="@style/Widget.Material3.Button" />
                -->

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>